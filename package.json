{
  "name": "twits",
  "version": "1.0.0",
  "description": "Twits microservice ",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production npx drizzle-kit --config=./dist/drizzle.config.js generate && NODE_ENV=production npx drizzle-kit migrate --config=./dist/drizzle.config.js && NODE_ENV=production node dist/src/index.js --config=./dist/drizzle.config.js",
    "dev": "NODE_ENV=development npx drizzle-kit generate && NODE_ENV=development npx drizzle-kit migrate && NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "test": "NODE_ENV=test drizzle-kit generate && NODE_ENV=test drizzle-kit migrate && NODE_ENV=test jest --verbose --runInBand",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@neondatabase/serverless": "^0.9.5",
    "@types/swagger-ui-express": "^4.1.6",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "eslint": "^9.10.0",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.4",
    "@types/pg": "^8.11.10",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^29.7.0",
    "coveralls-next": "^4.2.1",
    "express": "^4.21.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}

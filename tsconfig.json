{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es2020"
    ],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "target": "es2022",
    "types": [
      "node"
    ],
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "baseUrl": "./",
  "include": [
    "src/swagger-output.json",
    "./**/*",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}